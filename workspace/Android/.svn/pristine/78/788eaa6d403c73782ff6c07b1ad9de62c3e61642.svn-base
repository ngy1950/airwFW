<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:gravity="center"
        >

        <com.pnikosis.materialishprogress.ProgressWheel
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/w80"
            android:layout_height="@dimen/h80"
            wheel:matProg_barColor="#66EDE6"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_linearProgress="false"
            android:id="@+id/progress_wheel"
            />

        <com.pnikosis.materialishprogress.ProgressWheel
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/w80"
            android:layout_height="@dimen/h80"
            wheel:matProg_barColor="#66EDE6"
            wheel:matProg_fillRadius="false"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_linearProgress="true"
            android:id="@+id/progress_wheel_percent"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>
