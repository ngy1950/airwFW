/* info_my */
.info_my {background-color:red}
.info_my .name_user{color:#333}

/* Quick menu */
.guick_tit{color:#fffefe}

/* lnb dep */
.lnb_dep01{border-top:1px solid #ebebeb}
.lnb_dep01 li a{color:#333;}
.dep01_focus > a {color: #fff !important; background: #005fa1 url(/common/theme/webdek/navy/icon_folder_open.png) no-repeat 20px center !important; background-size: 14px auto !important; }
.lnb_dep01 > li > a {background: url(/common/theme/webdek/navy/icon_folder_close.png) no-repeat 20px center; background-size: 14px auto;}

.lnb_dep02 {background-color: rgba(255,255,255,0.5);}
.lnb_dep02 > li > a{background:url("/common/theme/webdek/navy/icon_folder_close.png") no-repeat 37px center; background-size: 14px auto;}
.lnb_dep02 > li.on > a {color: #005fa1; background: url(/common/theme/webdek/navy/icon_folder_open_navy.png) no-repeat 34px center !important; background-size: 14px auto !important; }
.dep02_focus_off > a {color:#666 !important;background-color:#f5f5f7 !important;background: url(/common/theme/webdek/navy/icon_folder_list_on.png) no-repeat 37px center !important; background-size: 14px auto !important;}
.dep02_focus_on > a {color:#007a33 !important;background: url("/common/theme/webdek/navy/icon_folder_open_navy.png") no-repeat 37px center; background-size: 14px auto;background-color:#f5e2d8 !important;}

.lnb_dep03{ border-bottom:1px solid #ebebeb}
.lnb_dep03 > li > a {padding:5px 0px 5px 74px !important; color: #676767; background: url(/common/theme/webdek/navy/icon_folder_list_on.png) no-repeat 54px center; background-size: 14px auto;}
.lnb_dep03 li a{color:#666;border-bottom:none; }
.lnb_dep03 li.on a{color:#005fa1;background: url(/common/theme/webdek/images/icon_folder_list_blue.png) no-repeat 54px center !important; background-size: 14px auto !important;}

/* search */
.required:after{background:url("/common/theme/webdek/images/icon.png") no-repeat right -40px}/* 필수 항목 */
.input_box{background:#fff;border:2px solid #fff;border-radius:2px}
.input_box_g{background:#fff;border:1px solid #ececec;border-radius:2px}
.input_box_bg{background:#f5f5f5;border:2px solid #f5f5f5;border-radius:2px}
.input_bg{background:#f5f5f5}
.txt_count{color:#101010}
.txt_total{color:#101010}

/*tabs*/
.sys_menu {/* border-left: 1px solid #6e7387; */   /* background: #ffa000; */}
.sys_menu.on span {background: url("/common/theme/webdek/images/icon_bottom_set.png") no-repeat left center; background-size: 12px;}
.my_menu { border-bottom: 1px solid #494d5e; background: #785844; padding: 18px 28px 18px 50px;}
.my_menu.on span {background: url("/common/theme/webdek/green/icn_star02_green_on.png") no-repeat 14px center; background-size: 12px;}
.tabs .sys_menu.on, .tabs .my_menu.on {border-bottom: 1px solid #fff; background-color:#fff; }
.tabs .sys_menu.on span, .tabs .my_menu.on span {color:#9ca99e;}
.tabs .sys_menu.off, .tabs .my_menu.off {border-bottom: 1px solid #e9e9e9; background: #e9e9e9; }
.tabs .sys_menu.off span, .tabs .my_menu.off span {color:#979797;}  
.tabs .sys_menu.off span {background: url("/common/theme/webdek/green/btn_close_sysmenu.png") no-repeat left center; background-size: 12px;}
.tabs .my_menu.off span {background: url("/common/theme/webdek/green/btn_close_mymenu.png") no-repeat 14px center; background-size: 12px;}
 
/*btn*/
.btn_asc {float:left; width: 100%; height: 100%; background-color:#fff !important; background: url("/common/theme/webdek/green/btn_open_menu.png") no-repeat center; background-size: 18px 8px; border: solid 1px #c9c9c9 !important; border-radius: 2px 2px 2px 2px;}
.btn_desc  {float:right; width: 31px; height: 30px; background: url("/common/theme/webdek/green/btn_close_menu.png") no-repeat center;  background-color: #fff !important;  background-size: 18px 8px; border: solid 1px #c9c9c9 !important; border-radius: 2px 2px 2px 2px;}
.btn_search{position:absolute; background: url("/common/theme/webdek/navy/search.png") no-repeat center; background-size:contain; }

