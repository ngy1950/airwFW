@charset "utf-8";

select {}
/* 사조 로그인  */
.logos_sago {left:17%;}
.logos_sago img:nth-child(1) {left: -21px; top: 113px;}
.logos_sago img:nth-child(2) {animation-name: fadeIntop; top: 15px;}
.logos_sago img:nth-child(3) {left: 282px; top:84px;}
.select_box {overflow: hidden;}
.select_box div {float:right;width: 380px; height:60px;background-repeat: no-repeat; background-position: 0 100%;background-size: 100%; }
.select_box div:nth-of-type(1) {background-image: url("/sajo/images/box2.png");margin-bottom: 6px;}
.select_box div:nth-of-type(2) {background-image: url("/sajo/images/box3.png");}
.select_box select {font-size: 15px; width:330px;display: block; height:50px; margin: 6px 0px 0 25px;padding-left: 13px;background:url("/sajo/images/arrow_down.png")no-repeat 95% 50%;background-size: 13px; appearance: none;-moz-appearance: none;-webkit-appearance: none;}
.select_box select::-ms-expand {display:none}

@keyframes fadeIntop {
	from {
		top:30px;opacity:0;
	}
	to {
		top:15px;opacity:1;
	}
}

/* 사조 탑 로고 */
.sajo_logos a span {background-image: url("/sajo/images/sajo_wms02.png");background-size: 140px !important; }

