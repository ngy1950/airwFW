@charset "utf-8";
@import "reset.css"; /* CSS 초기화 */
@import "top.css"; 

html,body,h1 {height: 100vh;}

.content_top{background-color:#fff}
.content_top:after{content:" ";display:block;height:0;clear:both}

.GCLC span{background:url("/common/theme/webdek/white/white_logo.png") no-repeat center !important; background-size: auto 46px !important;}
.GCCL span{background:url("/common/theme/webdek/navy/logo_gccl_w.png") no-repeat 0 0; display:block;width:134px; height:40px;text-indent:-5000px;overflow:hidden; background-size: cover;}

.btn_ghost {float:left; width:20px; height:12px;  padding: 19px 15px;}
.btn_ghost span {display:block; width:20px; height:12px; text-indent:-5000px; overflow:hidden; background: url("/common/theme/webdek/white/icon_menu.png") no-repeat 0 0; background-size: contain; }

.header_tab li a {font-size: 12px; color: #484c61; font-weight: bold; padding: 7px 10px;  }
.header_tab li a.selected {color: #152b9f;}

/*header 오른쪽 메뉴*/
.header_right li {height: 50px; line-height: 50px; display: inline-block; border-left: 1px solid #e5e7eb; padding: 0px 15px;}
.last_time {color: #6d7c89; font-size: 10px; border: none !important;}
.user_nm {cursor: pointer; background-size: 18px auto; color: #7a91a5; font-size: 10px; font-weight: bold;}
.alert a, .setting a, .logout a {visibility: hidden;}
.setting, .alert, .logout{background-position: center;}
.setting{background: url(/common/theme/webdek/white/setting.png) no-repeat center; background-size: 20px auto;}
.logout{background: url(/common/theme/webdek/white/logout.png) no-repeat center; background-size: 18px auto;}
.alert{background: url(/common/theme/webdek/white/alert.png) no-repeat center; background-size: 18px auto;}
